# Application Configuration
APP_NAME="Hexacore Industries"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://hexacoreindustries.com

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=hexacore_industries
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@hexacoreindustries.com"
MAIL_FROM_NAME="Hexacore Industries"

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Security Configuration
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# Performance Optimization
OPCACHE_ENABLED=true
REDIS_CLIENT=phpredis

# Image Processing
IMAGE_OPTIMIZATION_ENABLED=true
WEBP_CONVERSION_ENABLED=true

# CDN Configuration
CDN_URL=https://cdn.hexacoreindustries.com
CDN_ENABLED=false

# API Keys
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key